<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView 
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/image_name"/>

    <TextView
        android:id="@+id/text_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_name"
        android:text="11111"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_name"
        android:layout_alignParentRight="true"
        android:text="3333" />

    <TextView
        android:id="@+id/text_jieshao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_book"
        android:layout_below="@+id/text_book"
        android:text="2222" />

    <TextView
        android:id="@+id/text_ara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_name"
        android:layout_toRightOf="@+id/image_name"
        android:text="4444" />
    
</RelativeLayout>